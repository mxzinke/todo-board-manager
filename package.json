{
  "name": "todo-board-manager",
  "version": "0.1.1",
  "private": false,
  "dependencies": {
    "@feathersjs/authentication": "^2.1.16",
    "@feathersjs/client": "^3.7.8",
    "@feathersjs/express": "^1.3.1",
    "@feathersjs/feathers": "^3.3.1",
    "@feathersjs/socketio": "^3.2.9",
    "compression": "^1.7.4",
    "mysql": "^2.17.1",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-scripts": "^3.0.1",
    "socket.io-client": "^2.2.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "server": "node api/server.js"
  },
  "eslintConfig": {
    "extends": "react-app",
    "parserOptions": {
      "ecmaVersion": 8,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true,
        "impliedStrict": true
      }
    },
    "rules": {
      "eqeqeq": "error",
      "no-regex-spaces": "error",
      "no-unsafe-negation": "warn",
      "no-else-return": "error",
      "no-empty": "warn",
      "max-classes-per-file": ["error", 1],
      "no-magic-numbers": ["error", { "enforceConst": true }],
      "semi": "error",
      "semi-spacing": ["error", {
        "before": true,
        "after": false
        }],
      "spaces-before-blocks": "warn",
      "spaces-before-function-paren": ["warn", {
        "anonymous": "always",
        "named": "never",
        "asyncArrow": "always"
      }],
      "quotes": ["error", "single", { "allowTemplateLiterals": true }],
      "quote-props": ["error", "never"],
      "jsx-quotes": ["error", "prefer-double"],
      "getter-return": "error",
      "no-func-assign": "error",
      "no-new": "error",
      "no-octal": "error",
      "no-self-compare": "error",
      "no-useless-call": "warn",
      "no-warning-comments": ["error", {
        "terms": ["fixme", "problem", "warning"],
        "location": "anywhere"
        }],
      "yoda": ["warn", "never"],
      "sort-vars": ["error", { "ignoreCase": true }],
      "spaced-command": ["error", "always"],
      "template-curly-spacing": ["error", "never"]
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
